%h1
  Редактировать #{resource_name.to_s.humanize}
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "simple_form form-horizontal"}) do |f|
  = f.error_notification
  .form-inputs
    = f.input :email, :required => true, :autofocus => true
    = f.input :password, :autocomplete => "off", :hint => "оставьте пустым, если не хотите менять", :required => false, :label => "Новый пароль"
    = f.input :password_confirmation, :required => false, :label => "Пароль еще раз"
    = f.input :current_password, :hint => "укажите текущий пароль, чтобы подтвердить изменения", :required => true, :label => "Текущий пароль"
  .form-actions
    = f.button :submit, "Сохранить"
%h3 Удалить мою учетную запись
%p
  Несчастны с нами? #{link_to "Удалить мою учетную запись", registration_path(resource_name), :data => { :confirm => "Уверены?" }, :method => :delete}.
= link_to "Назад", :back
devise ru